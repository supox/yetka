            %ul.social-icon
              %li
                %a{:href => "https://api.whatsapp.com/send?phone=+972522561725"}
                  %i.fab.fa-2x.fa-whatsapp
              %li
                %a{:href => "https://www.facebook.com/quietincloud"}
                  %i.fab.fa-2x.fa-facebook
              %li
                %a{:href => "https://instagram.com"}
                  %i.fab.fa-2x.fa-instagram
