%div#booking.section-padding
  .container
    %h2.text-center.mb-lg-3.mb-2 שלח לנו הודעה
    = form_for contact do |f|
      .row
      .col-md-6
        .booking-form
          .row
            .col-lg-6.col-12
              = f.text_field :name, required: true, class: "form-control", placeholder: "שם מלא"
            .col-lg-6.col-12
              = f.text_field :email, required: true, class: "form-control", placeholder: "אימייל", pattern: "[^ @]*@[^ @]*"
            .col-lg-6.col-12
              = f.text_field :phone, required: true, class: "form-control", placeholder: "טלפון", pattern: "[-+0-9]{10-14}"
            .col-12
              = f.text_area :message, required: true, rows: 5, class: "form-control", placeholder: "שלח לנו הודעה!"
          .hidden
            = f.label :nickname
            = f.text_field :nickname, hint: 'Leave this field blank!'
          .col-lg-3.col-md-4.col-6.mx-auto
            = f.submit 'שלח הודעה', class: 'btn btn-primary'
